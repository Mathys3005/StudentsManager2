@{
}

@model List<StudentsCoursCesi.Models.Entities.Students>

<html>
    <head>
	<title>List of Students</title>
    </head>
	<body>
        <h1>List of Students</h1>
	</body>
	<table class="table">
    <thead>
        <tr>
			<th>
				ID
			</th>
			<th>
				Name
			</th>
			<th>
				Email
			</th>
			<th>
				Actions
			</th>
		</tr>
    </thead>
	<tbody>
		@foreach (var student in Model)
		{
			<tr>
				<td>
					@student.Id
				</td>
				<td>
					@student.Name
				</td>
				<td>
					@student.Email
				</td>
				<td>
				<div class="mt-3" display ="flex">
					<a href="@Url.Action("Edit", "Students", new { id = @student.Id })" class="btn btn-primary">Edit</a>
				</div>
			</tr>
		}
	</tbody>
</table>
</html>
