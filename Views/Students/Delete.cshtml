@{
}

@model StudentsCoursCesi.Models.Entities.Students

<h1>Delete Confirmation</h1>

<p>Voulez-vous vraiment supprimer cet élève ?</p>

<div>
    <h4>Student Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>


