@model StudentsCoursCesi.Models.Entities.Students

<h1>Edit Student</h1>

<form method="post" asp-action="Edit">

    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3" display="flex">
        <button type="submit" class="btn btn-primary">Edit Student</button>
    </div>

    <div class="mt-3">
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Student</a>
    </div>

</form>

